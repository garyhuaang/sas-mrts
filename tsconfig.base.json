{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@sas-mrts/rStore": ["libs/rStore/src/index.ts"],
      "@sas-mrts/ui": ["libs/shared/ui/src/index.ts"]
    }
  }
}
